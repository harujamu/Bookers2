<% if flash[:notice] %>
  <p id ="notice">
    <%= flash[:notice] %>
  </p>
<% else %>
  <p></p>
<% end %>
<div class ="container">
  <div class ="row">
    <div class ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
      <div class ="error_explanation">
        <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
      
        <%= form_with model: @user do |f| %>
        <div class ="form-group">
         <%= f.label :name %>
         <%= f.text_field :name, autofocus: true, class:"form-control" %> 
        </div>
        <div class ="form-group">
          <%= f.label :image %><br/>
          <%= f.file_field :profile_image, placeholder:"ファイルを選択", accept:"image/*" %>
        </div>
        <div class ="form-group">
          <%= f.label :introduction %><br />
          <%= f.text_area :introduction, autofocus: true, class:"form-control" %>
        </div>
        <div class ="form-group">
          <%= f.submit 'Update User', class:"btn btn-secondary" %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>


