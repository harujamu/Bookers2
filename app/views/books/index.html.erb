<p></p>
<div class ="container px-5 px-sm-0">
  <div class ="row">
    <%= render 'books/list.html.erb', users: @user %>

    <div class ="col-md-8 offset-md-1">
       <h2>Books</h2>   
          <table class ="table table-hover table-inverse">
            <thread>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thread>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><a><%= book.title %></a></td>
                <td><%= book.opinion %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>