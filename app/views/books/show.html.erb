<% if flash[:notice] %>
  <p id = "notice">
    <%= flash[:notice] %>
  </p>
<% else %>
  <p></p>
<% end %>
<div class ="container">
  <div class ="row">
    <%= render 'books/list.html.erb', user: @user, book: @book %>
    <div class ="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class ="table">
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %><br />
                <%= book.user.name %>
              <% end %>
            </td>
    
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
         
            <% if @user == current_user %>
            <td>
              <%= link_to 'Edit', edit_book_path, class:"btn btn-success btn-sm" %>
            </td>
            <td>
              <%= link_to 'Destroy', destroy_book_path, method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-danger btn-sm" %>
            </td>
            <% end %>
          </tr>
          <% end %>  
        </tbody>
        
 
      </table>
    </div>
  </div>
</div>

