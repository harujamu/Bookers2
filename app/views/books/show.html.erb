<p></p>
<div class ="container">
  <div class ="row">
    <div class ="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class ="table table-inverse table-hover">
        <tbody>
          <th>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@user.id) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
          </th>
        </tbody>
      </table>
    </div>
  </div>
</div>

