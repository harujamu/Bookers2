<p></p>
<div class ="container">
  <div class ="row">
    <%= render 'books/list.html.erb', user: @user, book: @book %>
    <div class ="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class ="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(100,100) %><br />
              <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@user.id) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

