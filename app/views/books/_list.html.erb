<div class ="col-md-3">
  <h2>User info</h2>
    <table class ="table table-striped">
       <thread>
        <tr>
          <th>name</th>
          <th>user.name</th>
        </tr>
        <tr>
          <th>introduction</th>
          <th>user.introduction</th>
        </tr>
      </thread>
    </table>
     <%= form_with model:@book do |f| %>
      <div class="field">
        <h2>New book</h2>
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true,  class:"form-control book_title" %>
      </div>

      <div class="field">
        <%= f.label :opinion %><br />
        <%= f.text_area :opinion, class:"form-control book_body" %>
      </div>

      <div class ="field">
        <%= f.submit 'Create Book', class:"btn btn-success"  %>
      </div>
    <% end %>
</div>

